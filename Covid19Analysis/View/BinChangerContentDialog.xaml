<ContentDialog
    x:Class="Covid19Analysis.View.BinChangerContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Change Bin Size"
    PrimaryButtonText="Change"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid Margin="0,0,0,-15" Height="100">
        <TextBox x:Name="binSizeTextBox" HorizontalAlignment="Left" Margin="135,0,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" AutomationProperties.PositionInSet="0" PlaceholderText="i.e. 250" TextChanged="binSizeTextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,7,0,0" Text="Bin Size:" TextWrapping="Wrap" VerticalAlignment="Top" Width="79"/>
        <TextBlock HorizontalAlignment="Left" Margin="65,0,0,0" Text="Default size is 500" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <TextBlock x:Name="ErrorLabel" HorizontalAlignment="Center" Margin="0,65,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Visibility="Collapsed"/>

    </Grid>
</ContentDialog>
